<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/green">

    <TextView
        android:id="@+id/titulo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="World GPS!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_centerHorizontal="true"
        android:textSize="40dp"
        android:layout_marginTop="20dp"/>

    <ImageButton
        android:id="@+id/boton1"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_below="@+id/titulo"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:src="@drawable/sosmaps"
        android:scaleType="centerCrop"
        android:background="@color/green"/>
    <TextView
        android:id="@+id/textoBoton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SOS"
        android:textSize="30dp"
        android:layout_below="@+id/boton1"
        android:layout_centerHorizontal="true"/>

    <ImageButton
        android:id="@+id/boton2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:layout_below="@id/textoBoton1"
        android:src="@drawable/parkingarea"
        android:scaleType="centerCrop"
        android:background="@color/green"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Aparcamiento"
        android:textSize="30dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/boton2"/>

</RelativeLayout>